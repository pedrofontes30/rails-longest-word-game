<h1>New game</h1>

<div class="pb-3">
  <% @letters.each do |letter| %>
    <div class="btn btn-primary mr-2"><%= letter %></div>
  <% end %>
</div>
<p>What is the longest word you can find?</p>
<form action="/score" method="post" class='form-inline'>
  <input type="text" name="word" class='form-control'>
  <input type="submit" value='Play' class='btn btn-primary'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
